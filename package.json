{
  "name": "@salesforce/eslint-config-lwc",
  "version": "0.3.0",
  "main": "index.js",
  "license": "MIT",
  "description": "Opinionated ESLint configurations for LWC projects",
  "keywords": [
    "eslint",
    "eslint-config",
    "lwc",
    "salesforce"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,md}\"",
    "lint": "eslint",
    "test": "mocha"
  },
  "dependencies": {
    "@lwc/eslint-plugin-lwc": "^0.6.0",
    "babel-eslint": "^10.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-restricted-globals": "^0.2.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.2"
  },
  "peerDependencies": {
    "eslint": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce/eslint-config-lwc.git"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "lib",
    "base.js",
    "extended.js",
    "index.js",
    "recommended.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
